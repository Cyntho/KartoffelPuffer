<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            android:background="@color/app_background_User"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDate"
                style="@style/background"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                app:cornerRadius="5dp"
                tools:text="27/06/2022" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTime"
                style="@style/background"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                app:cornerRadius="5dp"
                tools:text="10:25" />

        </LinearLayout>

        <View
            android:id="@+id/black_border"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tableGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dip"
                        android:layout_weight="0"
                        android:background="@color/black"
                        android:layoutMode="clipBounds"
                        android:padding="0dip">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnGrid1"
                            style="@style/Button.Kotlin_Basics_1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:visibility="gone"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </TableRow>

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/taken"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/grid_wall" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/Wand"
                    android:textColor="@color/textcolor"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/wall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/grid_taken" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/Besetzt"
                    android:textColor="@color/textcolor"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/free"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/grid_free" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/Frei"
                    android:textColor="@color/textcolor"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>